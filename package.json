{
  "name": "rightside-admin-bot",
  "version": "1.0.0",
  "private": true,
  "description": "RightSide Admin Bot desktop app with Telegram and SmartShell integration",
  "author": "RightSide Team",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win nsis --publish never"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "sql.js": "^1.13.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "gg.rightside.adminbot",
    "productName": "RightSide Admin Bot",
    "publish": null,
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "src/**",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
